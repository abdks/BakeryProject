@model List<BakeryProject.MediatorDesignPattern.Results.Gallery.GetAllGalleryQueryResult>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}




<div class="container">
    <br /><br />
    <table class="table table-bordered">
        <tr>
            <th>#</th>

            <th>Resim</th>
            <th>Resim Linki</th>
          >
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.GalleryId</td>
                <td><img src="@item.Image" height="50px" width="50px" /></td>
                <td>@item.Image</td>

                <td><a href="/Gallery/DeleteGallery/@item.GalleryId" class="btn btn-danger">Sil</td>
                <td><a href="/Gallery/UpdateGallery/@item.GalleryId" class="btn btn-danger">Güncelle</td>
            </tr>
        }
    </table>
    <a href="/Gallery/CreateGallery/" class="btn btn-success">Yeni Resim Girişi</a>
</div>