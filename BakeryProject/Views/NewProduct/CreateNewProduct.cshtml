@model BakeryProject.CQRSPattern.Commands.NewProduct.CreateNewProductCommand
@{
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<link href="~/lib/bootstrap/dist/css/bootstrap.rtl.min.css" rel="stylesheet" />

<div class="container">
    <br /><br />
    <form method="post">
        <label>Ürün Adı</label>
        <input type="text" asp-for="ProductName" class="form-control" />
        <br />
        <label>Ürün Açıklaması</label>
        <input type="text" asp-for="Description" class="form-control" />
        <br />
        <label>Ürün Kalın Açıklaması</label>
        <input type="text" asp-for="DescriptionBold" class="form-control" />
        <br />



        
        <label>Ürün Resimi</label>
        <input type="text" asp-for="Image" class="form-control" />
        <br />

        <button class="btn btn-primary">NewProduct Ekle</button>
    </form>
</div>