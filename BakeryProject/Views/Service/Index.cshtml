@model List<BakeryProject.CQRSPattern.Results.Service.GetServiceQueryResult>
@{
    Layout = "~/Views/AdminLayout/Index.cshtml";
}




<div class="container">
    <br /><br />
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Service Resim</th>
            <th>Service Resim Linki</th>
            <th>Service Başlığı</th>
            <th>Service Açıklaması</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ServicesID</td>
                <td><img src="@item.Image" height="50px" width="50px" /></td>
                <td>@item.Image</td>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td><a href="/Service/DeleteService/@item.ServicesID" class="btn btn-danger">Sil</td>
                <td><a href="/Service/UpdateService/@item.ServicesID" class="btn btn-danger">Güncelle</td>
            </tr>
        }
    </table>
    <a href="/Service/CreateService/" class="btn btn-success">Yeni Service Girişi</a>
</div>