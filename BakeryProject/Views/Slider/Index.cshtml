@model List<BakeryProject.CQRSPattern.Results.Slider.GetSliderQueryResult>
@{
    Layout = "~/Views/AdminLayout/Index.cshtml";
}




<div class="container">
    <br /><br />
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Slider Resim</th>
            <th>Slider Resim Linki</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.SliderID</td>
                <td><img src="@item.ImageUrl" height="50px" width="50px"/></td>
                <td>@item.ImageUrl</td>
                <td><a href="/Slider/DeleteSlider/@item.SliderID" class="btn btn-danger">Sil</td>
                <td><a href="/Slider/UpdateSlider/@item.SliderID" class="btn btn-danger">Güncelle</td>
            </tr>
        }
    </table>
    <a href="/Slider/CreateSlider/" class="btn btn-success">Yeni Slider Girişi</a>
</div>